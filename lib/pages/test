          GestureDetector(
            onTap: () => controller.pickColorIndex.value = 0,
            child: Container(
              width: 30,
              height: 30,
              decoration: BoxDecoration(
                border: controller.pickColorIndex.value == 0
                    ? Border.all(
                        color: Colors.grey,
                        width: 4.0,
                      )
                    : Border.all(width: 0),
                borderRadius: BorderRadius.circular(50),
                color: Colors.deepPurple,
              ),
            ),
          ),
          const SizedBox(
            width: 10.0,
          ),
